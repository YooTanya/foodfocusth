mixin list(items)
  ul&attributes(attributes)
    each item, key in items
      - var active = ''
      - if (key === listIndex) active = 'active'
      li(class=active)
        +link(item.title, item.href, item.text)(class=item.class)
        if (typeof(item.itemsMenu) !== 'undefined')
          +nav(item.itemsMenu)

mixin check-list(items, icon)
  ul&attributes(attributes)
    each item in items
      li 
        .icon
          +img(icon)
        .text
          span #{item.text}